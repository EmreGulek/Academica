@model IEnumerable<Ogrenci>

<h2>Öğrenci Listesi</h2>
<a class="btn btn-outline-secondary" asp-controller="Ogrenci" asp-action="Create">Öğrenci Ekle</a>
<hr>

<table class="table table-hover">
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(m => m.Id)</th>
        <th>@Html.DisplayNameFor(m => m.OgrenciAd)</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.OgrenciAd)</td>
            <td>
                <a asp-controller="Ogrenci" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Edit</a>
                <a href=" " class="btn btn-sm btn-outline-danger">Delete</a>
            </td>

        </tr>
    }
  
    </tbody>
</table>